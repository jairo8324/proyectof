<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
             />

        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/txtNombreCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgFoto"
            android:layout_toRightOf="@+id/imgFoto"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/txtApellidoCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/txtNombreCliente"
            android:layout_toEndOf="@+id/txtNombreCliente"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp" />

        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/txtPedidoCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNombreCliente"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imgFoto"
            android:layout_toRightOf="@+id/imgFoto"
            android:text="TextView"
            android:textStyle="bold" />

        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/txtBebidaCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPedidoCliente"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/imgFoto"
            android:layout_toRightOf="@+id/imgFoto"
            android:text="TextView"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>